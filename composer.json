    "psr-4": {
      "Civi\\": [".", "Civi/", "setup/src/"]
    },
    "files": ["functions.php", "guzzle_php81_shim.php"]
  },
  "include-path": ["vendor/tecnickcom"],
  "config": {
    "platform": {
      "php": "8.0.0"
    },
    "allow-plugins": {
      "civicrm/composer-compile-plugin": true,
      "civicrm/composer-downloads-plugin": true,
      "cweagans/composer-patches": true
    }
  },
