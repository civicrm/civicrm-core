  "license": "AGPL-3.0-or-later",
  "authors": [
    {
      "name": "Coleman Watts",
      "role": "Product Manager"
    },
    {
      "name": "Joshua Gowans",
      "role": "Project Manager"
    },
    {
      "name": "Mathieu Lutfy",
      "role": "Infrastructure"
